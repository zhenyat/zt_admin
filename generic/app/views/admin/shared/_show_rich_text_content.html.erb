<% if object.class.name.constantize.reflect_on_association(:rich_text_content).present? %>
  <table class="table table-striped">
    <tbody>
      <tr>
        <td>
          <%= t 'content' %>
        </td>
        <td>
          <div class="content-area">
            <%= object.content %>
          </div>
        </td>
      </tr>
    </tbody>
  </table>
<% end %>