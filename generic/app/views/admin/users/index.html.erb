<h1><%= t User.model_name.human(count: 2) %></h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th><%= User.human_attribute_name(:role) %></th>
      <th><%= User.human_attribute_name(:last_name) %></th>
      <th><%= User.human_attribute_name(:first_name) %></th>
      <th><%= User.human_attribute_name(:email) %></th>
      <th><%= t 'status.status' %></th>
      <th><%= t 'actions.actions' %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.role %></td>
        <td><%= user.last_name %></td>
        <td><%= user.first_name %></td>
        <td><%= user.email %></td>
        <td><%= status_mark user.status %></td>
        <td><%= render 'admin/shared/index_buttons', resource: user %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br/>
<div class="row">
  <div class="col-md-2">
    <%= link_to t('actions.create'), new_admin_user_path, class: 'btn btn-primary btn-sm' %>
  </div>
</div>
